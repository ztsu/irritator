{
    "name": "ztsu/irritator",
    "description": "Schema-oriented assertion library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Golovnya",
            "email": "alexey.golovnya@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
